<!DOCTYPE html>
<html lang="en">

<head>
        {{>headerlinks}}
</head>

<body>
        {{>navbar}}


        <div class="container-fluid main_header">
                <div class="row">
                        <div class="col-md-10 col-12 mx-auto weatherbox">
                                <div class="main_content">
                                        <form action="" class="temp_form">
                                                <input type="text" id="lat" placeholder="Latitude">
                                                <input type="text" id="long" placeholder="Longitude">
                                                <input type="submit" id="submitBtn" value="search" class="tempbtn">
                                        </form>
                                </div>

                                <div class="tempInfo">
                                        <div class="top_layer">
                                                <p id="day">tue</p>
                                                <p id="date">13oct</p>
                                        </div>
                                        <div class="main_layer">
                                                <p id="city_name">get output</p>
                                                <div class="middle_layer data_hide">
                                                        <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                                                        <p id="temp_status"><i class="fa fa-cloud"></i></p>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>

        {{>footer}}

        <script>
                const getCurrentDay = () => {
                        const weekday = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

                        let currentTime = new Date();
                        let days = weekday[currentTime.getDay()]
                        // console.log(day);
                        let day=document.getElementById('day')

                        day.innerText=days;
                }
                const getDate=()=>{
                        let dates = new Date().toUTCString().slice(5, 16);
                        let date=document.getElementById('date')
                        date.innerText=dates;


                }
                
                
                
                
                
                
                getDate();
                getCurrentDay();
        </script>
        <script src="js/main.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>